# =====================
# DATABASE (Supabase PostgreSQL)
# =====================
# Lấy từ Supabase Dashboard > Settings > Database > Connection string
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# =====================
# SUPABASE
# =====================
# Lấy từ Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# =====================
# NEXTAUTH
# =====================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here"
# Tạo secret: openssl rand -base64 32

# =====================
# GOOGLE OAUTH (REQUIRED)
# =====================
# Tạo credentials tại: https://console.cloud.google.com/apis/credentials
# Authorized redirect URIs: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =====================
# APP CONFIG
# =====================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Tạp Hoá Game"
NEXT_PUBLIC_CONTACT_ZALO="0912345678"
NEXT_PUBLIC_CONTACT_EMAIL="support@taphoagame.vn"

# =====================
# ANALYTICS (Optional)
# =====================
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_GTM_ID="GTM-XXXXXXX"

# =====================
# FEATURE FLAGS
# =====================
NEXT_PUBLIC_ENABLE_PWA="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
